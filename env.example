# Mimir Environment Configuration
# Copy this file to .env and adjust values as needed

# ============================================================================
# Neo4j Configuration
# ============================================================================
NEO4J_PASSWORD=password

# ============================================================================
# Embeddings Configuration
# ============================================================================

# Enable vector embeddings for semantic search
MIMIR_EMBEDDINGS_ENABLED=true
MIMIR_FEATURE_VECTOR_EMBEDDINGS=true

# Embeddings Provider: "copilot" or "ollama"
# - copilot: Uses OpenAI embeddings via copilot-api (recommended, no TLS issues)
# - ollama: Uses local Ollama models (requires Docker Ollama service)
MIMIR_EMBEDDINGS_PROVIDER=copilot

# Embeddings Model
# For Copilot/OpenAI:
#   - text-embedding-3-small (1536 dimensions, fast, recommended)
#   - text-embedding-3-large (3072 dimensions, best quality)
#   - text-embedding-ada-002 (1536 dimensions, legacy)
# For Ollama:
#   - nomic-embed-text (768 dimensions)
#   - mxbai-embed-large (1024 dimensions)
MIMIR_EMBEDDINGS_MODEL=text-embedding-3-small

# Embedding dimensions (must match model)
# text-embedding-3-small: 1536
# text-embedding-3-large: 3072
# text-embedding-ada-002: 1536
# nomic-embed-text: 768
MIMIR_EMBEDDINGS_DIMENSIONS=1536

# Text chunking for embeddings
MIMIR_EMBEDDINGS_CHUNK_SIZE=512
MIMIR_EMBEDDINGS_CHUNK_OVERLAP=50

# ============================================================================
# Ollama Configuration (only needed if MIMIR_EMBEDDINGS_PROVIDER=ollama)
# ============================================================================
OLLAMA_BASE_URL=http://ollama:11434

# ============================================================================
# Docker Configuration
# ============================================================================

# Host workspace root (for file indexing)
# This directory will be mounted read-only in the MCP container
HOST_WORKSPACE_ROOT=~/src

# ============================================================================
# Feature Flags
# ============================================================================

# Enable Ecko (Prompt Architect) agent for request optimization
# When enabled, user requests are first processed by Ecko to generate
# structured, comprehensive prompts before PM task decomposition
MIMIR_ENABLE_ECKO=true

# Enable PM model suggestions
MIMIR_FEATURE_PM_MODEL_SUGGESTIONS=false

# ============================================================================
# Proxy Configuration (if needed in corporate environments)
# ============================================================================

# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1

# ============================================================================
# Custom CA Certificates (if needed)
# ============================================================================

# SSL_CERT_FILE=/path/to/corporate-ca.crt
# CURL_CA_BUNDLE=/path/to/corporate-ca.crt
